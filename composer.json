{
	"name": "rplansky/blog",
	"description": "Ricardo Plansky's tech blog",
	"keywords": ["rplansky", "plansky", "blog", "pulse", "tech"],
	"license": "MIT",
	"type": "project",
	"repositories": [
	    {
		    "type": "vcs",
		    "url": "https://github.com/rplansky/core"
	    }
	],
	"require": {
		"laravel/framework": "5.0.*"
	},
	"require-dev": {
		"phpunit/phpunit": "~4.0",
		"phpspec/phpspec": "~2.1",
		"zizaco/confide": "dev-master",
		"pulse/core": "dev-laravel5"
	},
	"autoload": {
		"classmap": [
			"database"
		],
		"psr-4": {
			"RPlanskyBlog\\": "app/"
		}
	},
	"autoload-dev": {
		"classmap": [
			"tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-update-cmd": [
			"php artisan clear-compiled",
			"php artisan optimize"
		],
		"post-create-project-cmd": [
			"php -r \"copy('.env.example', '.env');\"",
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	}
}
